{
  "name": "@getbase/base",
  "version": "4.1.3",
  "description": "A Rock Solid, Responsive CSS Framework built to work on all devices big, small and in-between.",
  "homepage": "http://getbase.org/",
  "author": "Matthew Hartman",
  "main": "index.css",
  "scripts": {
    "start": "./node_modules/.bin/cross-env LANGUAGE=scss webpack-dev-server --mode development --config webpack.dev.config.js",
    "start:less": "./node_modules/.bin/cross-env LANGUAGE=less webpack-dev-server --mode development --config webpack.dev.config.js",
    "build:scss": "./node_modules/.bin/cross-env LANGUAGE=scss webpack --mode production",
    "build:less": "./node_modules/.bin/cross-env LANGUAGE=less webpack --mode production",
    "build": "npm run build:scss"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/getbase/base.git"
  },
  "keywords": [
    "css",
    "scss",
    "less",
    "framework",
    "mobile-first",
    "lightweight",
    "responsive"
  ],
  "license": "MIT",
  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "test",
    "tests"
  ],
  "engines": {
    "node": ">=4.0.0",
    "npm": ">=2.0.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.0"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^1.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "extract-text-webpack-plugin": "^4.0.0-alpha",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-reload-plugin": "^2.0.0",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "node-sass": "^4.10.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-livereload-plugin": "^2.1.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR"
  ],
  "bugs": {
    "url": "https://github.com/getbase/base/issues"
  }
}
